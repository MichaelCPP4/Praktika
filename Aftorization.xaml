<Window x:Class="bred.Aftorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bred"
        mc:Ignorable="d"
        Title="Авторизация" Height="263" Width="378">
    <Grid>
        <StackPanel>
            <Label Content="Логин:" Margin="0,40,0,5" HorizontalAlignment="Center"></Label>
            <TextBox x:Name="loginTextBox" Margin="40,0,40,20"></TextBox>
            <Label Content="Пароль" HorizontalAlignment="Center"></Label>
            <TextBox x:Name="passwordTextBox" Margin="40,0,40,20"/>
            <Button Content="Войти" Margin="140,0,140,0" Click="SignIn_click"></Button>
        </StackPanel>

    </Grid>
</Window>
